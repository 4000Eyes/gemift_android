<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/screenBG">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_work_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_10"
        android:background="@color/card_color"
        android:elevation="@dimen/margin_10"
        app:cardBackgroundColor="@color/card_color"
        app:cardCornerRadius="@dimen/margin_15"
        app:cardElevation="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_5"
            android:background="@color/white"
            android:orientation="vertical">
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/img_friends2"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:padding="15dp"
                    android:layout_gravity="center_vertical"
                    android:scaleType="centerCrop"
                    android:src="@drawable/watch" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/_10sdp">
                    <TextView
                        android:id="@+id/prod_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/quicksand_bold"
                        android:textAlignment="textStart"
                        android:text="This is product title 11088"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13ssp" />

                    <TextView
                        android:id="@+id/prod_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/quicksand_bold"
                        android:text="This is product title 11088"
                        android:textAlignment="textStart"
                        android:textColor="@color/text_color_gray_100"
                        android:textSize="@dimen/_10ssp" />
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/prod_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/opensans_medium"
                            android:text="$200"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_18ssp" />

                        <ImageView
                            android:id="@+id/img_like"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_gravity="center"
                            android:contentDescription="@null"
                            android:padding="5dp"
                            android:layout_marginLeft="@dimen/_20sdp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_thumb_up_anim" />


                        <TextView
                            android:id="@+id/deliver"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/margin_5"
                            android:fontFamily="@font/open_sans_regular"
                            android:text="Free delivery"
                            android:textSize="@dimen/margin_14"
                            android:visibility="gone" />
                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <Button
                            android:id="@+id/Recommend"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/_8ssp"
                            android:text="Recommend"/>

                        <Button
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:id="@+id/view"
                            android:textSize="@dimen/_8ssp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="view"/>

                    </androidx.appcompat.widget.LinearLayoutCompat>

                </androidx.appcompat.widget.LinearLayoutCompat>


            </androidx.appcompat.widget.LinearLayoutCompat>




        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>