<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center_vertical"
    android:layout_marginStart="@dimen/_15sdp"
    android:layout_marginEnd="@dimen/_15sdp"
    android:padding="@dimen/_5sdp">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_user"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="@dimen/_45sdp"
        android:layout_height="@dimen/_45sdp"
        android:src="@drawable/avatar"
        android:padding="@dimen/_2sdp"
        android:background="@drawable/circle"/>






    <TextView
        android:id="@+id/title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/img_user"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contributor Name"
        android:textStyle="bold"
        android:textSize="@dimen/_12ssp"
        android:fontFamily="@font/quicksand_bold"
        android:textColor="@color/black"/>


    <TextView
        android:id="@+id/txt_share"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toEndOf="@id/img_user"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Share Amount : 10.22 "
        android:textStyle="bold"
        android:textSize="@dimen/_10ssp"
        android:fontFamily="@font/quicksand_bold"
        android:textColor="@color/red"/>
    <TextView
        android:id="@+id/txt_paid_amount"
        app:layout_constraintTop_toBottomOf="@id/txt_share"
        app:layout_constraintStart_toEndOf="@id/img_user"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PaidA Amount : 10.22 "
        android:textStyle="bold"
        android:textSize="@dimen/_10ssp"
        android:fontFamily="@font/quicksand_bold"
        android:textColor="@color/red"/>







    <View
        app:layout_constraintTop_toBottomOf="@id/img_user"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/text_color_gray_op_60"/>




</androidx.constraintlayout.widget.ConstraintLayout>