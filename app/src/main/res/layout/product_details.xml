<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/screenBG"
    tools:context=".Ui.DashBoard.Fragments.Friends.SearchFriend">

    <include
        android:id="@+id/appbar"
        layout="@layout/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appbar"
        android:layout_marginStart="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginEnd="@dimen/margin_10"
        android:layout_marginBottom="@dimen/margin_10"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/margin_10">


        <TextView
            android:id="@+id/prod_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/opensans_medium"
            android:text="This  title 11088"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize_18" />

        <ImageView
            android:id="@+id/img_friends2"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_10"
            android:contentDescription="@null"
            android:padding="15dp"
            android:scaleType="centerCrop"
            android:src="@drawable/watch" />

        <TextView
            android:id="@+id/prod_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_5"
            android:fontFamily="@font/open_sans_bold"
            android:text="$200"
            android:textColor="@color/black"
            android:textSize="@dimen/margin_20" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_5"
            android:fontFamily="@font/open_sans_regular"
            android:text="Free delivery on next day"
            android:textColor="@color/quantum_grey700" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/opensans_medium"
            android:text="Description"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize_18" />

        <TextView
            android:id="@+id/prod_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_10"
            android:fontFamily="@font/open_sans_regular"
            android:text="Description"
            android:textColor="@color/black"
            android:textSize="@dimen/textSize_17" />

    </LinearLayout>

    <Button
        android:id="@+id/btn_proceed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_5"
        android:layout_marginBottom="@dimen/margin_5"
        android:background="@drawable/border"
        android:backgroundTint="@color/colorPrimary"
        android:fontFamily="@font/quicksand_bold"
        android:text="I recommend this"
        android:textAllCaps="false"
        android:textColor="@color/snow"
        android:textStyle="bold"
        app:backgroundTint="@color/colorPrimary" />
</RelativeLayout>