<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_5"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relative_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <ImageView
                android:id="@+id/img_interest"
                android:layout_width="@dimen/margin_50"
                android:layout_height="@dimen/margin_50"
                android:layout_centerVertical="true"
                android:padding="@dimen/margin_10"
                android:src="@drawable/giftbox" />

            <LinearLayout
                android:id="@+id/txt_occasion_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/margin_5"
                android:layout_toStartOf="@+id/linear_product"
                android:layout_toEndOf="@+id/img_interest"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_new_msg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5"
                    android:fontFamily="@font/open_sans_regular"
                    android:textColor="@color/black"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/txt_occasion_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans_medium"
                    android:text="Anitha Circle"
                    android:textColor="@color/black"
                    android:textSize="@dimen/textSize_18"
                    android:visibility="gone" />


                <TextView
                    android:id="@+id/txt_days_remaining"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5"
                    android:fontFamily="@font/open_sans_regular"
                    android:text="10 days"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/txt_occasion_frequency"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5"
                    android:fontFamily="@font/open_sans_regular"
                    android:text="10 days"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:visibility="gone" />


            </LinearLayout>

            <ImageView
                android:id="@+id/linear_product"
                android:layout_width="@dimen/margin_50"
                android:layout_height="@dimen/margin_50"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_product"
                app:tint="@color/black" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="@dimen/margin_10"
            android:visibility="gone">

            <ImageView
                android:id="@+id/img_like"
                android:layout_width="@dimen/margin_30"
                android:layout_height="@dimen/margin_30"
                android:layout_marginEnd="@dimen/margin_10"
                android:src="@drawable/ic_thumb_up" />

            <ImageView
                android:id="@+id/img_unlike"
                android:layout_width="@dimen/margin_30"
                android:layout_height="@dimen/margin_30"
                android:src="@drawable/ic_thumb_down" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>